<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.redvendedores.controlador.CrearVendedorController">

    <Label layoutX="50.0" layoutY="50.0" text="Nombre:" />
    <TextField fx:id="txtNombre" layoutX="150.0" layoutY="50.0" />

    <Label layoutX="50.0" layoutY="100.0" text="Apellido:" />
    <TextField fx:id="txtApellido" layoutX="150.0" layoutY="100.0" />

    <Label layoutX="50.0" layoutY="150.0" text="Cédula:" />
    <TextField fx:id="txtCedula" layoutX="150.0" layoutY="150.0" />

    <Label layoutX="50.0" layoutY="200.0" text="Dirección:" />
    <TextField fx:id="txtDireccion" layoutX="150.0" layoutY="200.0" />

    <Label layoutX="50.0" layoutY="250.0" text="Usuario:" />
    <TextField fx:id="txtUsuario" layoutX="150.0" layoutY="250.0" />

    <Label layoutX="50.0" layoutY="300.0" text="Contraseña:" />
    <TextField fx:id="txtContraseña" layoutX="150.0" layoutY="300.0" />

    <Button fx:id="btnCrearVendedor" layoutX="250.0" layoutY="350.0" onAction="#crearVendedor" text="Crear Vendedor" />

    <!-- Botón para volver al administrador -->
    <Button fx:id="btnVolver" layoutX="416.0" layoutY="350.0" onAction="#volverAlAdministrador" text="Volver al Administrador" />

</AnchorPane>
