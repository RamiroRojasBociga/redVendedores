<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.redvendedores.controlador.AdministrarRedControler">

    <!-- Botón para abrir la ventana de crear vendedor -->
    <Button fx:id="btnAbrirCrearVendedor" layoutX="21.0" layoutY="14.0" onAction="#abrirCrearVendedor" text="Crear Vendedor" />

    <!-- Botones adicionales para administrar la red -->
    <Button fx:id="btnEliminarVendedor" layoutX="138.0" layoutY="14.0" onAction="#eliminarVendedor" text="Eliminar Vendedor" />
    <Button fx:id="btnVerEstadisticas" layoutX="284.0" layoutY="14.0" onAction="#verEstadisticas" text="Ver Estadísticas" />

    <!-- Tabla de vendedores -->
    <Label layoutX="20.0" layoutY="59.0" text="Vendedores:" />
    <TableView fx:id="tableViewVendedores" layoutX="20.0" layoutY="90.0" prefHeight="295.0" prefWidth="560.0">
        <columns>
            <TableColumn fx:id="colNombre" prefWidth="118.33333396911621" text="Nombre" />
            <TableColumn fx:id="colApellido" prefWidth="115.0" text="Apellido" />
            <TableColumn fx:id="colIdentificacion" prefWidth="127.33329772949219" text="Identificación" />
            <TableColumn fx:id="colDireccion" prefWidth="87.66665649414062" text="Dirección" />
            <TableColumn fx:id="colUsuario" minWidth="7.333343505859375" prefWidth="111.66665649414062" text="Usuario" />
        </columns>
    </TableView>

</AnchorPane>
