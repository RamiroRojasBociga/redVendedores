<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.redvendedores.controlador.ContactosViewControler">

    <ListView fx:id="listViewContactos" layoutX="50.0" layoutY="50.0" prefHeight="250.0" prefWidth="200.0" />

    <Button fx:id="btnAgregarContacto" layoutX="250.0" layoutY="320.0" onAction="#agregarContacto" text="Agregar Contacto" />

    <VBox layoutX="300.0" layoutY="50.0" spacing="10">
        <Label text="Crear Nuevo Contacto" />
        <TextField fx:id="txtNombre" promptText="Nombre" />
        <TextField fx:id="txtApellido" promptText="Apellido" />
        <TextField fx:id="txtIdentificacion" promptText="Identificación" />
        <TextField fx:id="txtTelefono" promptText="Teléfono" />
    </VBox>

</AnchorPane>
